{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "es6": true
  },
  "rules": {
    "brace-style": ["error", "stroustrup"],
    "camelcase": "error",
    "curly": "error",
    "eol-last": ["error", "always"],
    "eqeqeq": "error",
    "indent": ["error", 4, {
      "SwitchCase": 1
    }],
    "max-depth": ["error", 4],
    "max-len": ["error", 120, {
      "ignoreComments": true
    }],
    "new-cap": "error",
    "no-console": "off",
    "no-undef": "error",
    "object-curly-spacing": ["error", "always"],
    "keyword-spacing": "error",
    "prefer-const": "error",
    "quotes": ["error", "single"],
    "space-before-function-paren": ["error", "never"]
  }
}
